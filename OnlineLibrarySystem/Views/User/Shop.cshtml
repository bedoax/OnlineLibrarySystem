@model IEnumerable<OnlineLibrarySystem.Models.Book>

<div class="container">
    <header class="d-flex flex-wrap justify-content-between py-3 mb-4 border-bottom">
        <h3 class="col-md-3 mb-0">Libooky</h3>
        <ul class="nav col-md-9 justify-content-center">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-warning" asp-controller="User" asp-action="Shop">Shop</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="User" asp-action="AboutUs">About Us</a>
            </li>
            <li class="nav-item">
                <a asp-action="MyProfile" asp-controller="User" class="nav-link text-dark">MyProfile</a>
            </li>
        </ul>
    </header>

    <h4 class="text-center">Recommended to start your reading journey</h4>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
        @foreach (var book in ViewBag.TopThreeBooks)
        {
            <div class="col">
                <div class="card h-100 text-center border-secondary">
                    <img src="@book.CoverImage" class="card-img-top img-fluid" alt="@book.Title" style="object-fit: cover; height: 200px;" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">Author: @book.Author</p>
                        <p class="card-text">@book.Price$</p>
                        <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })" class="btn btn-primary">Read Me</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <h4 class="mt-4">All Books</h4>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-3">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 text-center border-secondary">
                    <img src="@book.CoverImage" class="card-img-top img-fluid" alt="@book.Title" style="object-fit: cover; height: 200px;" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">Author: @book.Author</p>
                        <p class="card-text">@book.Price$</p>
                        <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })" class="btn btn-primary">Read Me</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
