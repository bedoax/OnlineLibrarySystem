@model OnlineLibrarySystem.Models.ChangePasswordInMyProfileViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container d-flex flex-column align-items-center min-vh-100">
    <div class="w-100" style="max-width: 500px;">
        <h1 class="text-center mb-4">Change Password</h1>
        <hr />

        <form asp-action="EditMyProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" readonly />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" placeholder="Current Password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Change Password" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="MyProfile" class="btn btn-secondary">Back to MyProfile</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
