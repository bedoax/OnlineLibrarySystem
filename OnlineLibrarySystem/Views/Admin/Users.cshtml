@model IEnumerable<OnlineLibrarySystem.Models.User>

<div class="container">
    <h1 class="text-center my-4">Welcome To Admin Page</h1>

    <header class="d-flex flex-wrap justify-content-center mb-4">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link" asp-action="Books" asp-controller="Admin">Books</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="Users" asp-controller="Admin">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout" asp-controller="Logout">Logout</a>
            </li>
        </ul>
    </header>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="AddUser" class="btn btn-primary">Add New User</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Balance</th>
                    <th>Created At</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.SkipWhile(x => x.RoleId == 1))
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Balance$</td>
                        <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                        <td>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
