@model OnlineLibrarySystem.Models.OTP

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <form method="post" asp-action="OTP" class="w-100" style="max-width: 400px;">
        <h2 class="text-center mb-4">OTP Verification</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <input asp-for="otp" type="text" class="form-control" placeholder="Enter OTP Number" />
            <span asp-validation-for="otp" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Confirm" class="btn btn-primary w-100" />
        </div>

        <div class="text-center mt-3">
            <a asp-action="Registration" asp-controller="Register" class="btn btn-link">Go to Register</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
